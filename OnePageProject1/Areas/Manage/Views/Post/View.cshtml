@using OnePageProject1.Models

@{
    ViewData["Title"] = "View";
}

@model Post

<div class="content-wrapper " style="padding-top:20px">
    <section class="content container">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">

                        <form>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Title"></label>
                                    <input value="@ViewBag.Title" class="form-control" readonly>
                                    <span class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <input value="@ViewBag.Description" class="form-control" readonly>
                                    <span class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CreatedAt"></label>
                                    <input value="@ViewBag.CreatedAt" class="form-control" readonly>
                                    <span class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Image"></label>
                                    <div class="input-group">
                                        <img src="~/assets/images/post/@ViewBag.Image" />
                                    </div>
                                </div>

                            </div>

                            <div class="card-footer">
                                <button asp-controller="Post" asp-action="Index" class="btn btn-warning">Return to list</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>